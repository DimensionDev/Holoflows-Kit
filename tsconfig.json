{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "lib": ["es2018", "dom", "dom.iterable"],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "sourceMap": true,
    "pretty": true,
    "target": "es2018",
    "outDir": "./es/",
    "incremental": true,
    "typeRoots": ["node_modules/@types", "node_modules/web-ext-types", "src/types"]
  },
  "include": ["./src/**/*"]
}
